<div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input required value="<%= article.title ? article.title : '' %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description ? article.description : '' %></textarea>
</div>
<div class="mb-3">
    <label for="markdown" class="form-label">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control"><%= article.markdown ? article.markdown : '' %></textarea>
</div>
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>